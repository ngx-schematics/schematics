{
  "compilerOptions": {
    "moduleResolution": "node",
    "incremental": true,
    "target": "es2015",
    "module": "commonjs",
    "sourceMap": true,
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "../../node_modules/@types",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
